@model Instructor

<h1>Instructor Details</h1>

<table class="table table-hover table-bordered">
    <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Department</th>
        <th>Course</th>
        <th>Image</th>
    </tr>
    <tr>
        <td>@Model.Id</td>
        <td>@Model.Name</td>
        <td>@Model.Salary</td>
        <td>@Model.Address</td>
        <td>@Model.Department?.Name</td>
        <td>@Model.Course?.Name</td>
        <td>
            <img src="~/images/@Model.ImagUrl" style="width:69px" />

        </td>
    </tr>
</table>
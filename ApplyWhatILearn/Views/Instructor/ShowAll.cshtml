@model List<Instructor>

<h1>Instructor</h1>
<table class="table table-hover table-bordered">
    <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Department</th>
        <th>Course</th>
        <th>Image</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td>@item.Department?.Name</td>
            <td>@item.Course?.Name</td>
            <td>
                <img src="~/images/@item.ImagUrl" style="width:69px" />
            </td>
            <td>
                <a asp-action="ShowUser" asp-controller="Instructor" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                <a asp-action="Edite" asp-controller="Instructor" asp-route-id="@item.Id" class="btn btn-info">Edite</a>
            </td>
        </tr>
    }



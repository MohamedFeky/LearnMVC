@using ApplyWhatILearn.ViewModel
@model InstructorCreateViewModel
@{
    ViewData["Title"] = "Edite";

}

<h2>Create Instructor</h2>

<form action="/Instructor/Edite/@Model.Id" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div>
        <label for="Name">Name</label>
        <input type="text" name="Name" id="Name" class="form-control" value="@Model.Name" />
    </div>

    <div>
        <label for="ImagUrl">Image URL</label>
        <input type="text" name="ImagUrl" id="ImagUrl" class="form-control" value="@Model.ImagUrl" />
    </div>

    <div>
        <label for="Salary">Salary</label>
        <input type="text" name="Salary" id="Salary" class="form-control" value="@Model.Salary" />
    </div>

    <div>
        <label for="Address">Address</label>
        <input type="text" name="Address" id="Address" class="form-control" value="@Model.Address" />
    </div>

    <div>
        <label for="DeptId">Department</label>
        <select name="DeptId" id="DeptId" class="form-control">
            <option value="">-- Select Department --</option>
            @foreach (var deptItem in Model.DeptList)
            {
                if (Model.DeptId == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected>@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id">@deptItem.Name</option>

                }
            }
        </select>
    </div>

    <div>
        <label for="CrsID">Course</label>
        <select name="CrsID" id="CrsID" class="form-control">
            <option value="">-- Select Course --</option>
            @foreach (var crsItem in Model.CrsList)
            {
                if (Model.CrsId == crsItem.Id)
                {
                    <option value="@crsItem.Id" selected>@crsItem.Name</option>
                }
                else
                {
                    <option value="@crsItem.Id">@crsItem.Name</option>

                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>

</form>

